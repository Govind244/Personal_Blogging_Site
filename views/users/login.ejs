<% layout("/layouts/boilerplate.ejs") -%>

<style>
        .log {
            background-color: #586ec7;
            padding: 30px;
            border-radius: 20px; 
            max-width: 350px; 
            margin: 50px auto;
            background-image: linear-gradient(to bottom, #6d86e9 20%, #c5a3b0 100%);
            transition: background-color 0.4s ease-in-out;
        }
        .log:hover {
        /* background-color: #c5a3b0;  */
        background-image: linear-gradient(to top, #637ad4 20%, #c5a3b0 100%);
        }
        .log h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .log .newForm {
            padding: 20px;
        }
        .log .form-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        .log .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 15px;
            width: 100%;
        }
        .log .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        .log .btn {
            margin-top: 10px;
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }

</style>

<Body>
<div    >
<div class="log" >
    <h2 style="color: rgb(57, 51, 38) !important; text-align: center; margin: 20px;">Login</h2>
    <!-- <h2 class="text-blanchedalmond text-center my-4">Login</h2> -->

    <div class="row" style="margin-top: 2rem !important;">
        <div>
            <div class="newForm">
                <form action="/user/login" method="post" novalidate class="needs-validation">
                    <div class="mb-3 login-color">
                        <label  for="username" class="form-label">Username</label>
                        <input type="text" required name="username" placeholder="Enter Username" id="username"
                            class="form-control">
                    </div>
                    <div class="mb-3 login-color">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" required name="password" placeholder="Enter password" id="password"
                            class="form-control">
                    </div>
                    <br>
                    <center><button class="btn btn-primary btn-sm">Login</button></center>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</Body>
