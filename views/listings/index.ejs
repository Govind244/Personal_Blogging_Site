    body {
        margin: 0;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .hero {
        margin: 20px 20px 0px 20px;
        border-radius:  20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 70vh;
        background-image: linear-gradient(to bottom, #fad0c4 0%, #f0abf0 100%);
        color: white;
        text-align: center;
        transition: background 0.5s ease-in-out;
        overflow: hidden; 
    }

    .hero:hover {
        background: linear-gradient(to top, #fad0c4 10%, #e692e6 100%);
    }

    .hero h1,
    .hero h2,
    .hero p {
        font-size: 2.5em;
        margin: 0.5em 0;
        transition: color 0.5s ease-in-out;
        opacity: 0;
        transform: translateX(-100%);
        animation: slide-in 1.5s forwards; 
    }

    .hero p {
        font-size: 1.2em;
    }

    @keyframes slide-in {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .cta-btn {
        display: inline-block;
        padding: 0.8em 2em;
        margin-top: 1em;
        background-color: #fff;
        color: #ff7e5f;
        border: none;   
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

    .cta-btn:hover {
        background-color: #ff7e5f;
        color: #fff;
    }








